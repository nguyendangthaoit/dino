              {% if section.settings.featured_article_3 != blank %}
              {% assign article_3 = articles[section.settings.featured_article_3] %}
                <li class="recent_posts_margin"><a href="{{ article_3.url }}">{{ article_3.title }}</a></li>
              {% endif %}
              
              {% if section.settings.featured_article_4 != blank %}
              {% assign article_4 = articles[section.settings.featured_article_4] %}
                <li class="recent_posts_margin"><a href="{{ article_4.url }}">{{ article_4.title }}</a></li>
              {% endif %}
              
              {% if section.settings.featured_article_5 != blank %}
              {% assign article_5 = articles[section.settings.featured_article_5] %}
                <li class="recent_posts_margin"><a href="{{ article_5.url }}">{{ article_5.title }}</a></li>
              {% endif %}

            </ul>
          </div>
        </div>
	{% endif %}

