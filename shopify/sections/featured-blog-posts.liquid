            <h3 class="h6 content-block__title">{{ 'blogs.article.featured_blog_posts' | t }}</h3>
            <ul class="list--no-bullets list--bold">
			  
              {% if section.settings.featured_article_1 != blank %}
              {% assign article_1 = articles[section.settings.featured_article_1] %}
