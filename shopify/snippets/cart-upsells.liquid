{% if section.settings.show_upsells_coll_1 == true %}
	<div class="upsell-container">
      <p class="upsell-text-min">{{ 'cart_booster.complete_your_cart' | t }}</p>
   
      {% if section.settings.product_upsell_1 != blank %}
          <div id="product-uppsell-1">
          {% for item in cart.items %}

                  {% if item.product.handle == section.settings.product_upsell_1 %}
                      <style>#product-uppsell-1{display:none!important;}</style>
                  {% endif %}
                  {% assign product_uppsell_1 = all_products[section.settings.product_upsell_1] %}
                  {% for collection in item.product.collections %}      
                      {% if section.settings.collection_upsell_1 == collection.handle %}
            			<div class="upsell-product-content">
                          <a href="{{ product_uppsell_1.url }}">
                            <img class="upsell-img" src="{{ product_uppsell_1 | img_url }}">
                            <span class="upsell-product-price">{{ product_uppsell_1.title }} - <span class="money">{{ product_uppsell_1.price | money }}</span></span>
                          </a>
                          <form class="upsellform" method="post" action="/cart/add" id="AddToCartForm--product-template" accept-charset="UTF-8" enctype="multipart/form-data">
                              <select name="id" id="ProductSelect" class="product-single__variants no-js">
                                  <option selected="selected" data-sku="" value="{{ product_uppsell_1.variants.first.id }}">
                                  </option>
                              </select>
                              <button type="submit" class="upsell-btn">{{ 'cart_booster.add' | t }}</button>
                          </form>
            			</div>
                      {% endif %}
                  {% endfor %}

          {% endfor %}
          </div>
      {% endif %}

