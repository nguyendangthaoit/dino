<script>
function isEmpty(el){
    return !$.trim(el.html())
}
{% if section.settings.show_upsells_coll_1 == true and section.settings.show_upsells_coll_2 == false %}
  if($("#product-uppsell-1").is(":hidden") && $("#product-uppsell-2").length == 0) {
      $('.upsell-container').hide();
  } else if($("#product-uppsell-1").is(":hidden") && $("#product-uppsell-2").is(":hidden")) {
      $('.upsell-container').hide();
  } else if(isEmpty($('#product-uppsell-1')) && isEmpty($('#product-uppsell-2'))) {
      $('.upsell-container').hide();
  }
{% endif %}
